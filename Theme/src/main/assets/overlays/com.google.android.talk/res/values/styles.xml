<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingsStyle" parent="@android:style/Theme.Material">
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textColorSecondary">#ffdddddd</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:actionBarStyle">@style/SettingsActionBarStyle</item>
    </style>
    <style name="SettingsActionBarStyle" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">#ffd32f2f</item>
        <item name="android:displayOptions">homeAsUp|showHome|showTitle</item>
    </style>
    <style name="Snackbar">
        <item name="android:background">#ff212121</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">56.0dip</item>
    </style>
    <style name="Theme.DialerPromo" parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:background">#ffd32f2f</item>
        <item name="android:colorPrimaryDark">#ffc62828</item>
    </style>
    <style name="Platform.AppCompat" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:colorPrimary">#ffd32f2f</item>
        <item name="android:colorPrimaryDark">#ffc62828</item>
        <item name="android:colorAccent">#ffd32f2f</item>
    </style>
    <style name="Platform.AppCompat.Light" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:colorPrimary">#ffd32f2f</item>
        <item name="android:colorPrimaryDark">#ffc62828</item>
        <item name="android:colorAccent">#ffd32f2f</item>
    </style>
    <style name="EsActionBar" parent="@android:style/Widget.Material.ActionBar.Solid" />
    <style name="NotificationPrimaryText">
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="NotificationSecondaryText">
        <item name="android:textColor">#ffdddddd</item>
    </style>
    <style name="Hangouts.Snackbar" parent="@style/Snackbar">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Hangouts.Fauxbar" parent="@style/Hangouts.Snackbar">
        <item name="android:background">#ff212121</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">56.0dip</item>
        <item name="messageTextColor">#ffffffff</item>
        <item name="actionTextColor">#ffc62828</item>
    </style>
    <style name="Theme.EmeraldSea.Settings" parent="@android:style/Theme.Material">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:actionBarStyle">@style/EsActionBar</item>
    </style>
    <style name="Theme.InCallDialpad" parent="@android:style/Theme.Material.Dialog.NoActionBar" />
    <style name="Theme.Hangout.IncomingRing"
        parent="@android:style/Theme.Material.DialogWhenLarge.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="Theme.ShareDialog" parent="@android:style/Theme.Material.Dialog">
        <item name="colorPrimary">#ffd32f2f</item>
        <item name="colorPrimaryDark">#ffc62828</item>
        <item name="colorAccent">#ffd32f2f</item>
    </style>
</resources>
